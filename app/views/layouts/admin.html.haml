%html{ lang: "en"}
  = render "layouts/head", title: "管理员"
  %body{class: "#{app_theme} admin"}
    = render "layouts/flash"
    = render "layouts/head_panel", title: "管理员"
    .container
      %ul.main_menu
        = nav_link(controller: :dashboard, html_options: {class: 'home'}) do
          = link_to "首页", admin_root_path
