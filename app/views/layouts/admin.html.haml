          = link_to "项目", admin_projects_path
        = nav_link(controller: :groups) do
          = link_to "团队", admin_groups_path
        = nav_link(controller: :users) do
          = link_to "用户", admin_users_path
        = nav_link(controller: :logs) do
          = link_to "日志", admin_logs_path
        = nav_link(controller: :hooks) do
          = link_to "挂钩", admin_hooks_path
        = nav_link(controller: :resque) do
          = link_to "后台任务", admin_resque_path

      .content= yield
